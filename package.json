{
  "scripts": {
    "dev": "concurrently \"tsx watch src/index.tsx\" \"npm run tw:dev\"",
    "prod": "concurrently \"tsx src/index.tsx\" \"npm run tw\"",
    "tw": "npx tailwindcss -i ./src/styles.css -o ./assets/styles.css",
    "tw:dev": "npx tailwindcss -i ./src/styles.css -o ./assets/styles.css --watch"
  },
  "dependencies": {
    "@hono/node-server": "^1.1.0",
    "@hono/zod-validator": "^0.1.3",
    "axios": "^1.4.0",
    "hono": "^3.3.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "tailwindcss": "^3.3.3",
    "tsx": "^3.12.2"
  }
}
